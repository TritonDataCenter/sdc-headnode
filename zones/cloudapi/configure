#!/usr/bin/bash
#
# Copyright (c) 2011 Joyent Inc., All rights reserved.
#

set -o xtrace

PATH=/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

# The user-script is downloaded and executed on every zone boot. We take
# advantage of this to maintain the cached config values post-setup.
if [ -e /var/svc/setup_complete ]; then
# TODO
# Update all the config that could have possibly changed.
    exit 0
fi

# XXX is net1 external nic?
EXT_IPADDR=`ifconfig net1 | nawk '{if ($1 == "inet") print $2}'`
CLOUDAPI_EXTERNAL_URL="https://$EXT_IPADDR"

echo "Updating config file manifest"
CFG_FILE_IN=/opt/smartdc/cloudapi/etc/cloudapi.cfg.in
CFG_FILE=/opt/smartdc/cloudapi/etc/cloudapi.cfg

# XXX use the first for now
CA_URL=http://$(echo "${CA_ADMIN_IPS}" | tr ',' ' '):23181

CNAPI_URL=http://$(echo "${CNAPI_ADMIN_IPS}" | cut -d',' -f1)
DAPI_URL=http://$(echo "${DAPI_ADMIN_IPS}" | cut -d',' -f1)
VMAPI_URL=http://$(echo "${VMAPI_ADMIN_IPS}" | cut -d',' -f1)
NAPI_URL=http://$(echo "${NAPI_ADMIN_IPS}" | cut -d',' -f1)

# Update config file
cp $CFG_FILE_IN $CFG_FILE
gsed -i -e "s|CA_URL|$CA_URL|" $CFG_FILE
gsed -i -e "s|CLOUDAPI_EXTERNAL_URL|$CLOUDAPI_EXTERNAL_URL|" $CFG_FILE
gsed -i -e "s|DATACENTER_NAME|$DATACENTER_NAME|" $CFG_FILE
gsed -i -e "s|UFDS_ROOT_DN|$UFDS_ROOT_DN|" $CFG_FILE
gsed -i -e "s|UFDS_ROOT_PW|$UFDS_ROOT_PW|" $CFG_FILE
gsed -i -e "s|SDC_ADMIN_LOGIN|$UFDS_ADMIN_LOGIN|" $CFG_FILE

gsed -i -e "s|VMAPI_URL|$VMAPI_URL|" $CFG_FILE
gsed -i -e "s|NAPI_URL|$NAPI_URL|" $CFG_FILE
gsed -i -e "s|IMGAPI_URL|$DSAPI_URL|" $CFG_FILE
gsed -i -e "s|IMGAPI_HTTP_ADMIN_USER|$DSAPI_HTTP_USER|" $CFG_FILE
gsed -i -e "s|IMGAPI_HTTP_ADMIN_PW|$DSAPI_HTTP_PW|" $CFG_FILE
gsed -i -e "s|VMAPI_HTTP_ADMIN_USER|$VMAPI_HTTP_ADMIN_USER|" $CFG_FILE
gsed -i -e "s|VMAPI_HTTP_ADMIN_PW|$VMAPI_HTTP_ADMIN_PW|" $CFG_FILE
gsed -i -e "s|NAPI_HTTP_ADMIN_USER|$NAPI_HTTP_ADMIN_USER|" $CFG_FILE
gsed -i -e "s|NAPI_HTTP_ADMIN_PW|$NAPI_HTTP_ADMIN_PW|" $CFG_FILE

echo "Updating SMF manifest"
$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/cloudapi/g" /opt/smartdc/cloudapi/smf/manifests/cloudapi.xml)

echo Importing SMF manifest
/usr/sbin/svccfg import /opt/smartdc/cloudapi/smf/manifests/cloudapi.xml

echo "Creating HAProxy config file"
cat > /opt/local/etc/haproxy.cfg <<HERE
global
        log 127.0.0.1 local0
        ulimit-n 4096
        user haproxy
        group haproxy
        daemon

defaults
        option ssl-hello-chk
        timeout connect 400ms
        timeout client 1m
        timeout server 5m

listen ufds_proxy 127.0.0.1:636
        mode tcp
        option tcplog
        log global
HERE

# Add all UFDS IPs to haproxy
# Mark the first one as not backup and all the others as backup
U=0
for ip in $(echo "${UFDS_ADMIN_IPS}" | tr ',' ' ')
do
    if [ $U == 0 ] ; then
        echo "        server ufds$U $ip:636 check" \
            >> /opt/local/etc/haproxy.cfg
    else
        echo "        server ufds$U $ip:636 check backup" \
            >> /opt/local/etc/haproxy.cfg
    fi

    let U+=1
done

# HAProxy logging configuration with rsyslog
# Create file to log haproxy:
touch /var/log/haproxy.log
# Set rsyslog config:
cat >> /etc/rsyslog.conf <<HERE

\$UDPServerRun 514
\$UDPServerAddress *

local0.*  /var/log/haproxy.log

HERE

# Restart syslog to make effective the changes before we start haproxy
svcadm restart system-log


echo "Enabling service haproxy"
/usr/sbin/svcadm disable haproxy
/usr/sbin/svcadm enable haproxy

exit 0
