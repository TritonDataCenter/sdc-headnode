#!/usr/bin/bash
#
# Copyright (c) 2012 Joyent Inc., All rights reserved.
#

set -o xtrace

PATH=/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

WF_MAIN_ADMIN_IP=$(echo "${WORKFLOW_ADMIN_IPS}" | cut -d',' -f1)

echo "Creating HAProxy config file"
cat > /opt/local/etc/haproxy.cfg <<HERE
global
        log 127.0.0.1 local0
        ulimit-n 65535
        user haproxy
        group haproxy
        daemon
defaults

        balance roundrobin
        timeout connect 400ms
        timeout client 1m
        timeout server 5m

listen moray_proxy 127.0.0.1:81
HERE

# Add all Moray IPs
R=0
for i in $(echo "${MORAY_ADMIN_IPS}" | tr ',' ' ')
do
    echo "        server moray$R $i:80 weight 1 minconn 5 maxconn 25 check" \
        >> /opt/local/etc/haproxy.cfg
    let R+=1
done


ZONE_UUID=`/usr/bin/zonename`

echo "Updating config file"
CFG_FILE_IN=/opt/smartdc/workflow/etc/config.json.in
CFG_FILE=/opt/smartdc/workflow/etc/config.json

# Update config file
cp $CFG_FILE_IN $CFG_FILE
gsed -i -e "s|WF_MORAY_URL|http://127.0.0.1:81|" $CFG_FILE
gsed -i -e "s|HTTP_ADMIN_PW|$HTTP_ADMIN_PW|" $CFG_FILE
gsed -i -e "s|HTTP_ADMIN_USER|$HTTP_ADMIN_USER|" $CFG_FILE
gsed -i -e "s|WF_NUM_FORKS|$WORKERS|" $CFG_FILE
gsed -i -e "s|WF_RUNNER_UUID|$ZONE_UUID|" $CFG_FILE
gsed -i -e "s|WF_RUN_INTERVAL|10|" $CFG_FILE

echo "Enabling service haproxy"
svcadm disable svc:/net/haproxy:default
svcadm enable svc:/net/haproxy:default

sleep 1

$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/workflow/g" /opt/smartdc/workflow/smf/manifests/wf-api.xml)
$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/workflow/g" /opt/smartdc/workflow/smf/manifests/wf-runner.xml)

echo "Importing SMF Manifests"
$(/usr/sbin/svccfg import /opt/smartdc/workflow/smf/manifests/wf-runner.xml)
$(/usr/sbin/svccfg import /opt/smartdc/workflow/smf/manifests/wf-api.xml)

exit 0
