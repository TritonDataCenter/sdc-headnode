#!/usr/bin/bash
#
# Copyright (c) 2011 Joyent Inc., All rights reserved.
#

set -o xtrace

role=ufds
LDAPTLS_REQCERT=allow
PATH=/opt/nodejs/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

echo "Creating HAProxy config file"
cat > /opt/local/etc/haproxy.cfg <<HERE
global
        log 127.0.0.1 local0
        ulimit-n 65535
        user haproxy
        group haproxy
        daemon
defaults

        balance roundrobin
        timeout connect 400ms
        timeout client 1m
        timeout server 5m

listen moray_proxy 127.0.0.1:81
HERE

# Add all Moray IPs
R=0
for i in $(echo "${MORAY_ADMIN_IPS}" | tr ',' ' ')
do
    echo "        server moray$R $i:80 weight 1 minconn 5 maxconn 25 check" \
        >> /opt/local/etc/haproxy.cfg
    let R+=1
done


echo "Updating config file"
CFG_FILE_IN=/opt/smartdc/$role/etc/config.json.in
CFG_FILE=/opt/smartdc/$role/etc/config.json

# Update config file
cp $CFG_FILE_IN $CFG_FILE
gsed -i -e "s|UFDS_ADMIN_IP|$UFDS_ADMIN_IP|" $CFG_FILE
gsed -i -e "s|ROOT_DN|$UFDS_LDAP_ROOT_DN|" $CFG_FILE
gsed -i -e "s|ROOT_PW|$UFDS_LDAP_ROOT_PW|" $CFG_FILE
gsed -i -e "s|MORAY_URL|http://127.0.0.1:81|" $CFG_FILE


# HAProxy logging configuration with rsyslog
# Create file to log haproxy:
touch /var/log/haproxy.log
# Set rsyslog config:
cat >> /etc/rsyslog.conf <<HERE

\$UDPServerRun 514
\$UDPServerAddress *

local0.*  /var/log/haproxy.log

HERE

# Restart syslog to make effective the changes before we start haproxy
svcadm restart system-log

echo "Importing SMF Manifests"
$(/usr/sbin/svccfg import /opt/smartdc/$role/smf/manifests/$role-master.xml)
$(/usr/sbin/svccfg import /opt/smartdc/$role/smf/manifests/$role-capi.xml)

echo "Enabling service haproxy"
svcadm disable svc:/net/haproxy:default
svcadm enable svc:/net/haproxy:default

sleep 1

echo "Enabling service ufds"
svcadm disable svc:/smartdc/application/ufds-master:default
svcadm enable svc:/smartdc/application/ufds-master:default

echo "Enabling service ufds-capi"
svcadm disable svc:/smartdc/application/ufds-capi:default
svcadm enable svc:/smartdc/application/ufds-capi:default


exit 0
