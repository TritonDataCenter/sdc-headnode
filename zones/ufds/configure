#!/usr/bin/bash
#
# Copyright (c) 2011 Joyent Inc., All rights reserved.
#

export PS4='[\D{%FT%TZ}] ${BASH_SOURCE}:${LINENO}: ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o xtrace

role=ufds
LDAPTLS_REQCERT=allow
PATH=/opt/nodejs/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

UFDS_ADMIN_IP=$(echo "${UFDS_ADMIN_IPS}" | cut -d',' -f1)

# XXX for now use the first MORAY, soon we'll be switching to DNS
MORAY_HOST=$(echo "${MORAY_ADMIN_IPS}" | cut -d ',' -f1)

echo "Updating config file"
CFG_FILE_IN=/opt/smartdc/$role/etc/config.json.in
CFG_FILE=/opt/smartdc/$role/etc/config.json

# Update config file
cp $CFG_FILE_IN $CFG_FILE
gsed -i -e "s|UFDS_ADMIN_IP|$UFDS_ADMIN_IP|" $CFG_FILE
gsed -i -e "s|ROOT_DN|$UFDS_LDAP_ROOT_DN|" $CFG_FILE
gsed -i -e "s|ROOT_PW|$UFDS_LDAP_ROOT_PW|" $CFG_FILE
gsed -i -e "s|MORAY_URL|http://${MORAY_HOST}:2020|" $CFG_FILE

# Replicator
REP_FILE_IN=/opt/smartdc/$role/etc/replicator.json.in
REP_FILE=/opt/smartdc/$role/etc/replicator.json

cp $REP_FILE_IN $REP_FILE
gsed -i -e "s|UFDS_ADMIN_IP|$UFDS_ADMIN_IP|" $REP_FILE
gsed -i -e "s|DATACENTER_NAME|$DATACENTER_NAME|" $REP_FILE
gsed -i -e "s|LOCAL_ROOT_DN|$UFDS_LDAP_ROOT_DN|" $REP_FILE
gsed -i -e "s|LOCAL_ROOT_PW|$UFDS_LDAP_ROOT_PW|" $REP_FILE


echo "Importing SMF Manifests"
$(/usr/sbin/svccfg import /opt/smartdc/$role/smf/manifests/$role-master.xml)
$(/usr/sbin/svccfg import /opt/smartdc/$role/smf/manifests/$role-capi.xml)

# We are intentionally giving UFDS service some room to create the required
# moray buckets before it gets called to add bootstrap data.
sleep 10

# Enable Cron
echo "Starting Cron"
svccfg import /lib/svc/manifest/system/cron.xml
svcadm enable cron

echo "Adding log rotation"
logadm -w ufds-master -C 48 -s 100m -p 1h \
    /var/svc/log/smartdc-application-ufds-master:default.log
logadm -w ufds-capi -C 48 -s 100m -p 1h \
    /var/svc/log/smartdc-application-ufds-capi:default.log

echo '0 * * * * /usr/sbin/logadm' > /etc/cron.d/logadm
crontab /etc/cron.d/logadm

exit 0
