#!/usr/bin/bash
#
# Copyright (c) 2012 Joyent Inc., All rights reserved.
#

set -o xtrace

PATH=/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

echo "Creating Clortho config file"
cat > /opt/smartdc/clortho/config.json <<HERE
{
  "logLevel": "debug",
  "maxSockets": 100,
  "api": {
    "port": 80
  },
  "ufds": {
    "url": "ldaps://localhost",
    "bindDN": "$CLORTHO_LDAP_ROOT_DN",
    "bindPassword": "$CLORTHO_LDAP_ROOT_PW",
    "cache": {
      "size": 1000,
      "expiry": 300
    }
  }
}
HERE

echo "Creating Clortho encryption key"
key=$(openssl enc -aes-128-cbc -P -k /dev/urandom | grep key | cut -f2 -d '=')
cat > /opt/smartdc/clortho/keyfile <<DONE
{ "latest" : "${key}" }
DONE

echo "Updating SMF manifest"
$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/clortho/g" /opt/smartdc/clortho/smf/manifests/clortho.xml)


echo "Importing clortho.xml"
/usr/sbin/svccfg import /opt/smartdc/clortho/smf/manifests/clortho.xml

exit 0
