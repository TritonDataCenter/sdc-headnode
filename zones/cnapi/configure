#!/usr/bin/bash
#
# Copyright (c) 2012 Joyent Inc., All rights reserved.
#

export PS4='[\D{%FT%TZ}] ${BASH_SOURCE}:${LINENO}: ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o xtrace

PATH=/opt/smartdc/cnapi/build/node/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

# This includes the fatal and sdc_[zk|manatee|moray|ufds]_check functions
source /var/svc/configure.common

eval $(cat /opt/smartdc/etc/zoneconfig)

CNAPI_URL=http://$(echo "${CNAPI_ADMIN_IPS}" | cut -d',' -f1)
ASSETS_URL=http://$(echo "${ASSETS_ADMIN_IPS}" | cut -d',' -f1)
DAPI_URL=http://$(echo "${DAPI_ADMIN_IPS}" | cut -d',' -f1)
NAPI_URL=http://$(echo "${NAPI_ADMIN_IPS}" | cut -d',' -f1)
VMAPI_URL=http://$(echo "${VMAPI_ADMIN_IPS}" | cut -d',' -f1)
WF_URL=http://$(echo "${WORKFLOW_ADMIN_IPS}" | cut -d',' -f1)

# XXX for now use the first UFDS, soon we'll be switching to DNS
UFDS_HOST=$(echo "${UFDS_ADMIN_IPS}" | cut -d ',' -f1)

# XXX for now use the first MORAY, soon we'll be switching to DNS
MORAY_HOST=$(echo "${MORAY_ADMIN_IPS}" | cut -d ',' -f1)

REDIS_HOST=$(echo "${REDIS_ADMIN_IPS}" | cut -d ',' -f1)

echo "Creating CNAPI config file"
cat > /opt/smartdc/cnapi/config/config.json <<HERE
{
  "logLevel": "debug",
  "datacenter_name": "$DATACENTER_NAME",
  "amqp": {
    "host": "$RABBIT_ADMIN_IP"
  },
  "moray": {
    "host": "$MORAY_HOST",
    "port": 2020
  },
  "api": {
    "username": "$CNAPI_HTTP_ADMIN_USER",
    "password": "$CNAPI_HTTP_ADMIN_PW",
    "port": 80
  },
  "wfapi": {
    "workflows": [ ],
    "url": "$WF_URL",
    "username": "$WFAPI_HTTP_ADMIN_USER",
    "password": "$WFAPI_HTTP_ADMIN_PW"
  },
  "napi": {
    "url": "$NAPI_URL",
    "username": "$NAPI_HTTP_ADMIN_USER",
    "password": "$NAPI_HTTP_ADMIN_PW"
  },
  "assets": {
    "url": "$ASSETS_URL"
  },
  "cnapi": {
    "url": "$CNAPI_URL"
  },
  "redis": {
    "host": "$REDIS_HOST"
  },
  "ufds": {
    "url": "ldaps://${UFDS_HOST}",
    "bindDN": "$CNAPI_LDAP_ROOT_DN",
    "bindPassword": "$CNAPI_LDAP_ROOT_PW",
    "cache": {
      "size": 1000,
      "expiry": 300
    }
  }
}
HERE

echo "Updating SMF manifest"
$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/cnapi/g" /opt/smartdc/cnapi/smf/manifests/cnapi.xml)

# This function comes from configure.common
echo "Checking Moray status"
sdc_ensure_moray $MORAY_ADMIN_IPS \
  /opt/smartdc/cnapi/node_modules/moray/bin/sql


echo "Importing cnapi.xml"
/usr/sbin/svccfg import /opt/smartdc/cnapi/smf/manifests/cnapi.xml

exit 0
