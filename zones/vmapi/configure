#!/usr/bin/bash
#
# Copyright (c) 2011 Joyent Inc., All rights reserved.
#

export PS4='[\D{%FT%TZ}] ${BASH_SOURCE}:${LINENO}: ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o xtrace

PATH=/opt/smartdc/vmapi/build/node/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

# This includes the fatal and sdc_[zk|manatee|moray|ufds]_check functions
source /var/svc/configure.common

eval $(cat /opt/smartdc/etc/zoneconfig)

WF_URL=http://$(echo "${WORKFLOW_ADMIN_IPS}" | cut -d',' -f1)
CNAPI_URL=http://$(echo "${CNAPI_ADMIN_IPS}" | cut -d',' -f1)
DAPI_URL=http://$(echo "${DAPI_ADMIN_IPS}" | cut -d',' -f1)

# XXX for now use the first MORAY, soon we'll be switching to DNS
MORAY_HOST=$(echo "${MORAY_ADMIN_IPS}" | cut -d ',' -f1)

echo "Creating VMAPI config file"
CFG_FILE_IN=/opt/smartdc/vmapi/config.json.in
CFG_FILE=/opt/smartdc/vmapi/config.json

cp $CFG_FILE_IN $CFG_FILE
gsed -i -e "s|MORAY_HOST|$MORAY_HOST|" $CFG_FILE
gsed -i -e "s|RABBIT_ADMIN_IP|$RABBIT_ADMIN_IP|" $CFG_FILE
gsed -i -e "s|REDIS_ADMIN_IPS|$REDIS_ADMIN_IPS|" $CFG_FILE
gsed -i -e "s|WF_URL|$WF_URL|" $CFG_FILE
gsed -i -e "s|CNAPI_URL|$CNAPI_URL|" $CFG_FILE
gsed -i -e "s|NAPI_URL|$NAPI_URL|" $CFG_FILE
gsed -i -e "s|NAPI_HTTP_ADMIN_USER|$NAPI_HTTP_ADMIN_USER|" $CFG_FILE
gsed -i -e "s|NAPI_HTTP_ADMIN_PW|$NAPI_HTTP_ADMIN_PW|" $CFG_FILE
gsed -i -e "s|VMAPI_LDAP_ROOT_DN|$VMAPI_LDAP_ROOT_DN|" $CFG_FILE
gsed -i -e "s|VMAPI_LDAP_ROOT_PW|$VMAPI_LDAP_ROOT_PW|" $CFG_FILE


echo "Updating SMF manifest"
$(/opt/local/bin/gsed -i"" -e "s/@@PREFIX@@/\/opt\/smartdc\/vmapi/g" /opt/smartdc/vmapi/smf/manifests/vmapi.xml)

echo "Importing vmapi.xml"
/usr/sbin/svccfg import /opt/smartdc/vmapi/smf/manifests/vmapi.xml

exit 0
