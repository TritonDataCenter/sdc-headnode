#!/usr/bin/bash
#
# Copyright (c) 2011 Joyent Inc., All rights reserved.
#

set -o xtrace

PATH=/opt/nodejs/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin

eval $(cat /opt/smartdc/etc/zoneconfig)

echo "Creating SMF manifests"
cat > /opt/smartdc/lfds/cfg/lfds_manifest.xml <<HERE
<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="lfds">
  <service name="smartdc/site/lfds" type="service" version="7.0.0">

    <create_default_instance enabled="true"/>
    <single_instance/>

    <dependency name="network" grouping="require_all" restart_on="error" type="service">
      <service_fmri value="svc:/milestone/network:default"/>
    </dependency>

    <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
      <service_fmri value="svc:/system/filesystem/local"/>
    </dependency>

    <exec_method
      type="method"
      name="start"
      exec="/opt/nodejs/bin/node /opt/smartdc/lfds/main.js -f /opt/smartdc/lfds/cfg/config.json&amp;"
      timeout_seconds="60">
      <method_context working_directory="/opt/smartdc/lfds">
        <method_credential user="nobody" group="nobody" privileges="basic,net_privaddr"/>
        <method_environment>
          <envvar name="PATH" value="/opt/nodejs/bin:/usr/local/bin:/opt/local/bin:/usr/bin:/usr/sbin:/bin"/>
          <envvar name="LD_PRELOAD_32" value="/usr/lib/extendedFILE.so.1" />
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method type="method" name="restart" exec=":kill" timeout_seconds="60">
      <method_context working_directory="/opt/smartdc/lfds" />
    </exec_method>

    <exec_method type="method" name="stop" exec=":kill" timeout_seconds="60">
      <method_context working_directory="/opt/smartdc/lfds" />
    </exec_method>

    <property_group name="startd" type="framework">
      <propval name="ignore_error" type="astring" value="core,signal"/>
    </property_group>

    <property_group name="application" type="application">

    </property_group>

    <stability value="Stable"/>

    <template>
      <common_name>
        <loctext xml:lang="C">LFDS daemon (ldapjs)</loctext>
      </common_name>
    </template>

  </service>

</service_bundle>
HERE


# Update config file
cp /opt/smartdc/lfds/cfg/config-lfds.json.in /opt/smartdc/lfds/cfg/config-lfds.json.in.orig
gsed -i -e "s/ROOTDN/$UFDS_LDAP_ROOT_DN/" /opt/smartdc/lfds/cfg/config-lfds.json.in
gsed -i -e "s/ROOTPW/$UFDS_LDAP_ROOT_PW/" /opt/smartdc/lfds/cfg/config-lfds.json.in
gsed -i -e "s/RIAK_IP/${RIAK_IP}/" /opt/smartdc/lfds/cfg/config-lfds.json.in
gsed -i -e "s/RIAK_PORT/${RIAK_PORT}/" /opt/smartdc/lfds/cfg/config-lfds.json.in
gsed -i -e "s/REMOTEURL/${REMOTE_URL}/" /opt/smartdc/lfds/cfg/config-lfds.json.in
mv /opt/smartdc/lfds/cfg/config-lfds.json.in /opt/smartdc/lfds/cfg/config.json
mv /opt/smartdc/lfds/cfg/config-lfds.json.in.orig /opt/smartdc/lfds/cfg/config-lfds.json.in

echo "Importing lfds_manifest.xml"
/usr/sbin/svccfg import /opt/smartdc/lfds/cfg/lfds_manifest.xml

echo "Enabling service lfds"
/usr/sbin/svcadm disable smartdc/site/lfds
/usr/sbin/svcadm enable smartdc/site/lfds

exit 0
