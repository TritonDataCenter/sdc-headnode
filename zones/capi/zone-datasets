printf "%-56s" "Creating zone capi-data..." >> /dev/console

if [[ -f "${USB_COPY}/backup/capi-data.zfs" ]]; then
  zfs receive zones/capi/capi-data < "${USB_COPY}/backup/capi-data.zfs"
  # Remove the snapshot created when received the zfs file:
  DATA_DS_SNAP=$(zfs list -t snapshot -H -o name|grep "capi\/capi-data@")
  zfs destroy ${DATA_DS_SNAP}
else
  zfs create zones/capi/capi-data
fi
printf "%4s\n" "done" >> /dev/console


zonecfg -z capi "add dataset; set name=zones/capi/capi-data; end; verify; commit"
STAMP=$(cat /zones/capi/root/opt/smartdc/capi-VERSION)
printf "%-56s" "Creating zone capi-app-${STAMP}..." >>/dev/console
zfs create zones/capi/capi-app-${STAMP}
echo "$STAMP">/zones/capi/root/root/capi-app-timestamp
cmd="add dataset; set name=zones/capi/capi-app-$STAMP; end; verify; commit"
zonecfg -z capi $cmd
printf "%4s\n" "done" >> /dev/console

