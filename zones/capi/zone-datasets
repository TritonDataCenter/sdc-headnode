printf "%-56s" "Creating zone ${ZONENAME}-data..." >> /dev/console

if [[ -f "${USB_COPY}/backup/${ZONENAME}-data.zfs" ]]; then
  zfs receive zones/${ZONENAME}/capi-data < "${USB_COPY}/backup/capi-data.zfs"
  # Remove the snapshot created when received the zfs file:
  DATA_DS_SNAP=$(zfs list -t snapshot -H -o name|grep "${ZONENAME}\/capi-data@")
  zfs destroy ${DATA_DS_SNAP}
else
  zfs create zones/${ZONENAME}/capi-data
fi
printf "%4s\n" "done" >> /dev/console


zonecfg -z ${ZONENAME} "add dataset; set name=zones/${ZONENAME}/capi-data; end; verify; commit"
STAMP=$(cat /zones/${ZONENAME}/root/opt/smartdc/capi-VERSION)
printf "%-56s" "Creating zone capi-app-${STAMP}..." >>/dev/console
zfs create zones/${ZONENAME}/capi-app-${STAMP}
echo "$STAMP">/zones/${ZONENAME}/root/root/capi-app-timestamp
cmd="add dataset; set name=zones/${ZONENAME}/capi-app-$STAMP; end; verify; commit"
zonecfg -z ${ZONENAME} $cmd
printf "%4s\n" "done" >> /dev/console

