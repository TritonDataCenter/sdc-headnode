#!/bin/bash

set -e

echo "pubapi branch: [${USE_BRANCH}]"

mkdir -p root/opt/smartdc
cd root/opt/smartdc
git clone git@git.joyent.com:public_api.git pubapi-repo
cd pubapi-repo
git branch --track ${USE_BRANCH}  origin/${USE_BRANCH}
git checkout ${USE_BRANCH}
touch ../pubapi-VERSION
git describe --tags > ../pubapi-VERSION

