#!/bin/bash

set -e

echo "Portal target: [${CHECKOUT_TARGET}]"

mkdir -p root/opt/smartdc
cd root/opt/smartdc
git clone git@git.joyent.com:public-web-client.git portal
cd portal
git checkout ${CHECKOUT_TARGET}
touch ../portal-VERSION
git describe --tags > ../portal-VERSION
rm -rf .git
rm -f config.js
